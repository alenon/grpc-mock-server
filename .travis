language: node_js
node_js:
  - "7"

script: echo "Running tests against $(node -v) ..."

jobs:
  include:
    - stage: build package
      script: echo "Building package ..."
      script: npm build
    - stage: release package
      script: echo "Deploying to npm ..."
      deploy:
        provider: npm
        api_key: $NPM_API_KEY
        on:
          tags: true
